class XRPN
  def rclpta
    f = Dir.home + "/.xrpn/data/" + @a
    if File.exist?(f + ".as")
      @xmcont = JSON.parse(File.read(f + ".as")) 
      @x      = @xmcont[0][3]
    elsif File.exist?(f + ".da")
      @xmcont = JSON.parse(File.read(f + ".da")) 
      @x      = @xmcont[0][3]
    else
      return "No such file: #{@a}"
    end
  end
end
 
